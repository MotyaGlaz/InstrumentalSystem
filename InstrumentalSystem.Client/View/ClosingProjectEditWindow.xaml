<Window x:Class="InstrumentalSystem.Client.View.ClosingProjectEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Save" Height="180" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Text="Вы хотите сохранить изменения?" Grid.Row="1" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Grid.Row="2">
            <Button Name="YesButton" Style="{StaticResource modal bt}" Content="Да" Width="150" Height="50" Margin="10" Click="YesButton_Click"/>
            <Button Name="NoButton" Style="{StaticResource modal bt}" Content="Нет" Width="150" Height="50" Margin="10" Click="NoButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
