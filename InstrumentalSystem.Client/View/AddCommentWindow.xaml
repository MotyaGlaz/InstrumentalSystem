<Window x:Class="InstrumentalSystem.Client.View.AddCommentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Comment" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox Name="commentTextBox" Grid.Row="0" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" AcceptsReturn="True" Margin="10"/>

        <Button Content="Добавить" Grid.Row="1" Style="{StaticResource modal bt}" HorizontalAlignment="Right" Margin="10" Click="AddButton_Click"/>
    </Grid>
</Window>
